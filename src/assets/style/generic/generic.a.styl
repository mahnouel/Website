
a 
  text-decoration: none;
  background-color: $color.link.default;
  padding: 0 0.25em;
  border-radius: .25em;
  position: relative;
  color: #111111;
  box-decoration-break: clone;
  hyphens: manual;
  break-inside: avoid;

a:visited 
  background-color: $color.link.visited;

a:hover 
  opacity: 0.6;

a[target='_blank']
  border-radius: 0;

