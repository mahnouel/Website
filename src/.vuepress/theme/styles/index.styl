@import url("https://rsms.me/inter/inter-ui.css");
@import 'color';


body,
html 
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: calc(16px + 100vw / 100);
  line-height: 1.25;
  margin: 0;
  padding: 0;
  font-family: "Inter UI", sans-serif;
@media (min-width: 768px) 
  body,
  html 
    font-size: 24px;
body 
  max-width: 28rem;
  margin: auto;
  padding: 1rem;
.text 
  --flow-space: 1rem;
.text > * 
  margin-bottom: var(--flow-space);
.highlight,
mark 
  background-color: #111111;
  color: #fff;
  font-weight: bold;
  border-radius: 0.25rem;
  padding: 0.05em 0.5em;
  margin-right: 0.25rem;
p 
  margin: 0;
.text h1 
  line-height: 0.8;

  // text-align: center;
  // font-family: serif;
  margin: 0;
  margin-bottom: 1rem;
  margin-top: 0.2em;
  font-size: 2rem;
  @media (min-width: 768px) 
    font-size: 2.5rem;
  .header-anchor 
    display: none;
h4 
  --flow-space: .5rem;
  margin: 0;
  margin-bottom: .5rem;
  font-size: 1.25em;


.logo 
  margin-top: 4rem;
  margin-bottom: 2rem;
  width: 100%;


.media 
  padding-left: 2rem;
  vertical-align: top;
  width: calc(100% - 2rem);
  margin-bottom: 2rem;

.relative 
  position: relative;


.p-1 
  padding: 1rem;


.mb-1 
  margin-bottom: 1rem;
.mb-2
  margin-bottom: 2rem;
.mb-3 
  margin-bottom: 3rem;


.flex 
  display: flex;


.flex-2 
  flex: 2;


.flex-1 
  flex: 1;


.flex-wrap 
  flex-wrap: wrap;


.flex-basis-320px 
  flex-basis: 320px;

.center
  text-align:center;
.faded 
  opacity: 0.5;

.block 
  display: block !important;

/* HEADER THEMES */




.aqua 
  background-color: COLOR.aqua;
  .highlight 
    color: inherit;
    background-color: rgba(255, 255, 255, 0.4) !important;
.maroon 
  background-color: COLOR.maroon;
  color: white;
.winter 
  background-color: lightblue;
  .highlight
    background-color: rgba(255, 255, 255, 0.2) !important;
.spring 
  background-color: #cec19b;
  .highlight
    background-color: rgba(255, 255, 255, 0.2) !important;
.camp 
  background-color: #1e5090;
  color: white;
